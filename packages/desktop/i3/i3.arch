#!/bin/bash

########################################
# Arch install of i3
# Tiled Window Manager
########################################

echo "Installing I3 and dependencies"
#Install i3
sudo pacman -S --noconfirm i3 i3lock polybar perl pkgconf imagemagick

echo "Installing xfce terminal & URxvt"
sudo pacman -S --noconfirm --needed xfce4-terminal urxvt

echo "Installing Rofi"
sudo pacman -S --noconfirm rofi

./compton_build.sh
