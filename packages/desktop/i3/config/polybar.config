# vim: set syn=dosini:

[bar/top]
#monitor = HDMI-1
#monitor-fallback = eDP-1
monitor = ${env:MONITOR}
width = 100%
height = 18

background = #aa000000
foreground = #ccffffff

line-color = ${bar/bottom.background}
line-size = 10

spacing = 0
padding-right = 2
module-margin = 1

font-0 = NotoSans-Regular:size=8;0
font-1 = FontAwesome:style=Regular:pixelsize=8;0
font-2 = FantasqueSansMono Nerd Font:pixelsize=9;0

tray-position = left
modules-center = isrunning-nordvpn
modules-right = wireless-network wired-network battery date

[bar/bottom]
#monitor = HDMI-1
#monitor-fallback = eDP-1
monitor = ${env:MONITOR}
bottom = true
width = 100%
height = 20

background = ${bar/top.background}
foreground = ${bar/top.foreground}

line-color = ${bar/top.background}
line-size = 2

spacing = 3
padding-right = 4
padding-left = 3
module-margin-left = 0
module-margin-right = 6

font-0 = NotoSans-Regular:size=6;0
font-1 = FontAwesome:style=Regular:pixelsize=7;0
font-2 = FantasqueSansMono Nerd Font:pixelsize=7;0
font-3 = NotoSans-Regular:size=6;-1

modules-left = i3
modules-right = cpu memory

[module/battery]
type = internal/battery
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full-foreground = #00cc00
format-full = <ramp-capacity> <label-full>
format-full-padding = 3
format-charging-padding = 3
format-discharging-padding = 3

#ramp-capacity-0 = 
#ramp-capacity-0-foreground = #f53c3c
#ramp-capacity-1 = 
#ramp-capacity-1-foreground = #ffa900
#ramp-capacity-2 = 
#ramp-capacity-3 = 
#ramp-capacity-4 = 

ramp-capacity-0 = 
ramp-capacity-0-foreground = #f53c3c
ramp-capacity-1 = 
ramp-capacity-1-foreground = #ffa900
ramp-capacity-2 = 
ramp-capacity-2-foreground = #ffa900
ramp-capacity-3 = 
ramp-capacity-3-foreground = #ffa900
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 


bar-capacity-width = 10
bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
bar-capacity-fill = █
bar-capacity-fill-foreground = #ddffffff
bar-capacity-fill-font = 3
bar-capacity-empty = █
bar-capacity-empty-font = 3
bar-capacity-empty-foreground = #44ffffff

animation-charging-foreground = #0033cc
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
animation-charging-framerate = 750

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
enable-click = false
enable-scroll = false
label-focused-font = 9
label-unfocused-font = 9
label-visible-font = 9
label-urgent-font = 9

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #f00
label-mode-background = #ffb52a

ws-icon-1 = 1;1
ws-icon-2 = 2;2
ws-icon-3 = 3;3
ws-icon-4 = 4;4
ws-icon-5 = 5;5
ws-icon-6 = 6;6
ws-icon-7 = 7;7
ws-icon-8 = 8;8
;ws-icon-9 = 9;9
;ws-icon-0 = 10;10
;ws-icon-8 = 8;
ws-icon-9 = 9;
ws-icon-0 = 10;
ws-icon-default = 

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = $#773f3f3f
label-focused-underline = #4a1599
label-focused-padding =4

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 4

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/backlight]
type = internal/backlight
card = intel_backlight
format =  <label>
format-padding = 0

label = %percentage%

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> <ramp-coreload>
label = CPU

ramp-coreload-0 = ▁
ramp-coreload-0-font = 2
ramp-coreload-0-foreground = #aaff77
ramp-coreload-1 = ▂
ramp-coreload-1-font = 2
ramp-coreload-1-foreground = #aaff77
ramp-coreload-2 = ▃
ramp-coreload-2-font = 2
ramp-coreload-2-foreground = #aaff77
ramp-coreload-3 = ▄
ramp-coreload-3-font = 2
ramp-coreload-3-foreground = #aaff77
ramp-coreload-4 = ▅
ramp-coreload-4-font = 2
ramp-coreload-4-foreground = #fba922
ramp-coreload-5 = ▆
ramp-coreload-5-font = 2
ramp-coreload-5-foreground = #fba922
ramp-coreload-6 = ▇
ramp-coreload-6-font = 2
ramp-coreload-6-foreground = #ff5555
ramp-coreload-7 = █
ramp-coreload-7-font = 2
ramp-coreload-7-foreground = #ff5555

[module/date]
type = internal/date
date =   %%{F#99}%d %b, %Y%%{F-}  %%{F#fff}%H:%M%%{F-}
date-alt =   %%{F#fff}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}
#
[module/memory]
type = internal/memory
format = <label> <bar-used>
label = RAM

bar-used-width = 30
bar-used-foreground-0 = #aaff77
bar-used-foreground-1 = #aaff77
bar-used-foreground-2 = #fba922
bar-used-foreground-3 = #ff5555
bar-used-indicator = |
bar-used-indicator-font = 6
bar-used-indicator-foreground = #ff
bar-used-fill = ─
bar-used-fill-font = 6
bar-used-empty = ─
bar-used-empty-font = 6
bar-used-empty-foreground = #444444

[module/wireless-network]
type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 10

format-connected = <ramp-signal> <label-connected>
format-connected-paddingleft = 0
format-disconnected-padding-left = 0
label-connected = %essid%
label-disconnected = 睊not connected
label-disconnected-foreground = #66

ramp-signal-0 = 直

animation-packetloss-0 = 
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = 
animation-packetloss-1-foreground = ${bar/top.foreground}
animation-packetloss-framerate = 500

[module/wired-network]
type = internal/network
interface = enp62s0u1u1
interval = 3.0

label-connected =  %{T3}%local_ip%%{T-}
label-disconnected-foreground = #66

[module/volume]
type = internal/alsa

format-volume = <ramp-volume><label-volume>
format-volume-padding = 3
format-muted-padding = 3

label-volume = %{F-} %percentage%
label-muted =  muted
label-muted-foreground = #66
label-volume-foreground = ${root.foreground}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/isrunning-nordvpn]
type = custom/script
exec = ~/dotfiles/packages/desktop/i3/scripts/nord_connection.py
interval = 5
