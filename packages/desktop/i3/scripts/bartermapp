#!/bin/bash

# Shamelessly stolen from https://github.com/Nikzt/dotfiles/blob/master/scripts/bartermapp

# Usage:
#	bartermapp [arg1] [arg2]
#		arg1: terminal program to run
#		arg2: number of times to apply additional x offset defined by xinterval

xoffset=50
xinterval=60
yoffset=30
width=500
height=500
terminal=urxvt
if [ $2 = 0 ] || [$2 = 1 ]; then
	x=1400
else
	x=$(expr $xoffset + $xinterval - $xinterval)
fi

tdrop -ma -w $width -h $height -x $x -y $yoffset -n $2 -f "-e $1" $terminal
